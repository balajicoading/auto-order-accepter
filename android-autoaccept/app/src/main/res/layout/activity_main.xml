<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switchEnable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Auto-Accept"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Start X:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editStartX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="198"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Start Y:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editStartY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="2212"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe End X:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editEndX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="904"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe End Y:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editEndY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="2189"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration (ms):"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="400"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Tap X:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editCloseX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="924"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Tap Y:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editCloseY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="239"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Threshold (km):"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="2.0"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnTestSwipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Swipe"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Close"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>
